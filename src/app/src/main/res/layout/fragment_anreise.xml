<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/EL2020SchriftDunkel"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="35dp"
                android:text="@string/anreiseInformationenÜberschrift2"/>

            <!-- HIER GOOGLE MAPS LINK-->

            <com.example.kartellderliebe.ExpandableTextView xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/expand_text_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                expandableTextView:maxCollapsedLines="4"
                expandableTextView:animDuration="200">

                <TextView
                    android:id="@+id/expandable_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/EL2020SchriftDunkel"
                    android:paddingLeft="25dp"
                    android:paddingTop="25dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="0dp" />

                <TextView
                    android:id="@+id/textViewDots1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/EL2020SchriftDunkel"
                    android:textSize="25dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="180dp"
                    android:gravity="center"
                    android:text="..."
                    android:paddingBottom="0dp" />

                <ImageButton
                    android:id="@+id/expand_collapse1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingTop="5dp"
                    android:paddingRight="25dp"
                    android:layout_gravity="center|bottom"
                    android:background="@android:color/transparent" />

            </com.example.kartellderliebe.ExpandableTextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/EL2020SchriftDunkel"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="35dp"
                android:text="@string/anreiseInformationenÜberschrift3"/>

            <com.example.kartellderliebe.ExpandableTextView xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/expand_text_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                expandableTextView:maxCollapsedLines="4"
                expandableTextView:animDuration="200">

                <TextView
                    android:id="@+id/expandable_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/EL2020SchriftDunkel"
                    android:paddingLeft="25dp"
                    android:paddingTop="25dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="0dp" />

                <TextView
                    android:id="@+id/textViewDots2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/EL2020SchriftDunkel"
                    android:textSize="25dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="180dp"
                    android:gravity="center"
                    android:text="..."
                    android:paddingBottom="0dp" />

                <ImageButton
                    android:id="@+id/expand_collapse2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingTop="5dp"
                    android:paddingRight="25dp"
                    android:layout_gravity="center|bottom"
                    android:background="@android:color/transparent" />

            </com.example.kartellderliebe.ExpandableTextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/EL2020SchriftDunkel"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="35dp"
                android:text="@string/anreiseInformationenÜberschrift4"/>

            <com.example.kartellderliebe.ExpandableTextView xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/expand_text_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                expandableTextView:maxCollapsedLines="4"
                expandableTextView:animDuration="200">

                <TextView
                    android:id="@+id/expandable_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/EL2020SchriftDunkel"
                    android:paddingLeft="25dp"
                    android:paddingTop="25dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="0dp" />

                <TextView
                    android:id="@+id/textViewDots3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/EL2020SchriftDunkel"
                    android:textSize="25dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="180dp"
                    android:gravity="center"
                    android:text="..."
                    android:paddingBottom="0dp" />

                <ImageButton
                    android:id="@+id/expand_collapse3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingTop="5dp"
                    android:paddingRight="25dp"
                    android:layout_gravity="center|bottom"
                    android:background="@android:color/transparent" />

            </com.example.kartellderliebe.ExpandableTextView>

        </LinearLayout>
    </ScrollView>
</layout>